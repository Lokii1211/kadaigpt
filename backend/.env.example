# KadaiGPT Environment Configuration

# App Settings
APP_NAME=KadaiGPT
APP_ENV=development
DEBUG=True
SECRET_KEY=KadaiGPT-super-secret-key-change-in-production-2026

# Database
DATABASE_URL=sqlite+aiosqlite:///./kadaigpt.db

# JWT Settings
JWT_SECRET_KEY=KadaiGPT-jwt-secret-key-2026
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Google AI (Gemini) for OCR
GOOGLE_API_KEY=your-google-api-key-here

# Redis (for task queue)
REDIS_URL=redis://localhost:6379/0

# Printer Settings
DEFAULT_PRINTER_NAME=auto
SILENT_PRINT_ENABLED=true

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10

# Evolution API (WhatsApp Bot) - FREE & UNLIMITED
# Deploy Evolution API on Railway, then set these values
EVOLUTION_API_URL=https://your-evolution-api.railway.app
EVOLUTION_API_KEY=your-evolution-api-key
EVOLUTION_INSTANCE_NAME=kadaigpt
WHATSAPP_VERIFY_TOKEN=kadaigpt_verify_token
